<div class="card w-400 col align-items-center justify-content-center display-flex m-auto ">
  <div class="card-body">
    <h2 class="card-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field d-flex form-group">
        <%= f.label :email, class:"mr-2 mw-75 m-auto" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>

      <div class="field d-flex form-group mb-0">
        <%= f.label :password, class:"mr-2 mw-75 m-auto" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="d-flex">
        <% if @minimum_password_length %>
          <small id="passwordHelp" class="form-text text-muted mb-05">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>

      <div class="field d-flex form-group">
        <%= f.label :confirm_password, class:"mr-2 mw-75 m-auto" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-success" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

</div>
</div>
