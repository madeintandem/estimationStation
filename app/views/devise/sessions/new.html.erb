<div class="card w-400 col align-items-center justify-content-center display-flex m-auto ">
  <div class="card-body">
    <h2 class="card-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field d-flex form-group">
      <%= f.label :email, class:"mr-2 mw-75 m-auto" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
    </div>

    <div class="field d-flex form-group">
      <%= f.label :password, class:"mr-2 mw-75 m-auto"%>
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field form-group ml-remember-check ">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-success" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>